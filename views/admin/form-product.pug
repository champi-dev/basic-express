extends ../layout/main-layout.pug

block styles
  link(rel="stylesheet" href="/css/forms.css")
  link(rel="stylesheet" href="/css/product.css")

block content
  main
  form.product-form(action=editing ? '/admin/edit-product' : '/admin/add-product', method="POST")
    .form-control
      label(for="title") Title
      input(type="text", name="title", value=product ? product.title : '')#title
    .form-control
      label(for="imageUrl") Image Url
      input(type="text", name="imageUrl", value=product ? product.imageUrl : '')#imageUrl
    .form-control
      label(for="price") Price
      input(type="number", name="price", step="0.01", value=product ? product.price : '')#price
    .form-control
      label(for="description") Description
      textarea(name="description", rows="5")#description #{product ? product.description : ''}
    button.btn(type="submit") #{editing ? 'Edit' : 'Add'} Product


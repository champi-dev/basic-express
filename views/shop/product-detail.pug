block styles
  link(rel="stylesheet" href="/css/forms.css")
  link(rel="stylesheet" href="/css/product.css")

block content
  main.centered
    h1 #{product.title}
    hr
    div 
      img.image(src=product.imageUrl, alt=product.title)
    h2 #{product.price}
    p #{product.description}
    include ../includes/add-cart